<h1>My list of tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <p>[<%= task.done ? "DONE" : "TO DO" %>] -
        <%= link_to task_path(task) do %>
          <%= task.name %> - <%= task.description %>
        <% end %>
      </p>
      <p> <%= link_to "edit", edit_task_path(task) %></p>
      <p>  </p>
      <p> <%= link_to "Delete", task_path(task), method: :delete %> </p>
    </li>
  <% end %>
</ul>

<%= link_to "create a new task", new_task_path %>
